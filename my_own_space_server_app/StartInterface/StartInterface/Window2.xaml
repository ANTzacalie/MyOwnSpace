<Window x:Class="StartInterface.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StartInterface"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Background="Black"
        Title="MyOwnSpace ver1.1" Height="500" Width="700">


    <Grid>

        <TextBlock x:Name="FirstT" Text="About" Foreground="White" FontSize="35" FontFamily="Consolas" Width="120" Height="60" HorizontalAlignment="Left" Margin="30,15,0,0" VerticalAlignment="Top" />

        <TextBlock x:Name="SecondT" Foreground ="LightBlue" Focusable="True" FontSize="12" FontFamily="Consolas" Height="300" Margin="30,90,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="540"/>

        <Button 
            x:Name="Policy"
            Margin="0,120,40,0"
            RenderTransformOrigin="0.934,0.703"
            Background="White"
            Foreground="Black"
            Click="Open_source_licenses"
            Height="50"
            BorderThickness="0"
            VerticalAlignment="Top"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" HorizontalAlignment="Right" Width="50">

            <Button.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                    </ResourceDictionary.MergedDictionaries>

                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </ResourceDictionary>
            </Button.Resources>

            <Button.Content>
                <materialDesign:PackIcon Kind="License"
                         Width="24" Height="24"
                         Foreground="Black"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center" />
            </Button.Content>
        </Button>

        <Button 
            x:Name="Git_link"
            Margin="0,0,40,120"
            RenderTransformOrigin="0.934,0.703"
            Background="White"
            Foreground="Black"
            Click="ToGithub"
            Height="50"
            BorderThickness="0"
            VerticalAlignment="Bottom"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" HorizontalAlignment="Right" Width="50">

            <Button.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                    </ResourceDictionary.MergedDictionaries>

                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </ResourceDictionary>
            </Button.Resources>

            <Button.Content>
                <materialDesign:PackIcon Kind="HeartOutline"
                 Width="24" Height="24"
                 Foreground="Black"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center" />
            </Button.Content>
        </Button>


    </Grid>


</Window>
