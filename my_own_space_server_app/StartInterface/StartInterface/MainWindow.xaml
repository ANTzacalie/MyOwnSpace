<Window x:Name="MainScreen" x:Class="StartInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StartInterface"
        ResizeMode="CanMinimize"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MyOwnSpace ver1.1" Height="720" Width="1200" Background="Black" Foreground="#FF020101"
        Icon="pack://application:,,,/resources/favicon.ico">
        

    <Grid Name="INTERFACE_GRID" >

        <Border Background="Transparent" Focusable="True" MouseLeftButtonDown="FocusableArea_MouseLeftButtonDown">
            <TextBlock TextWrapping="Wrap" FontSize="35" HorizontalAlignment="Left" Foreground="White" Text="MyOwnSpace" Margin="30,15,0,616"/>
        </Border>

        <Button x:Name="buttonStart" BorderThickness="0" Content="START" Margin="100,550,0,0" Background="#FF2BF70F" Foreground="White" FontSize="14" Height="54" VerticalAlignment="Top" ClickMode="Press" Click="ButtonStart_Click" HorizontalAlignment="Left" Width="100" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="buttonStop" BorderThickness="0" Content="STOP" Margin="210,550,0,0" Background="#FFF50808" FontSize="14" Foreground="#FFFBFAFA" HorizontalAlignment="Left" Width="100" Height="54" VerticalAlignment="Top" ClickMode="Press" Click="ButtonStop_Click" RenderTransformOrigin="0.19,0.482" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>

        <TextBlock Margin="100,124,0,0" TextWrapping="Wrap" FontSize="20" Text="PRIVATE KEY (privkey.pem)" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="281" Foreground="White"/>

        <TextBlock Margin="100,184,0,0" TextWrapping="Wrap" Text="CERTIFICATE (cert.pem)" FontSize="20" HorizontalAlignment="Left" Width="250" Height="27" VerticalAlignment="Top" Foreground="White"/>

        <TextBlock Margin="100,244,0,0" TextWrapping="Wrap" FontSize="20" Text="CHAIN (chain.pem)" HorizontalAlignment="Left" Width="220" Height="27" VerticalAlignment="Top" Foreground="White"/>

        <TextBlock Margin="700,124,0,0" TextWrapping="Wrap" Text="EMAIL FOR NODEMAILER" FontSize="20" HorizontalAlignment="Left" Width="250" Height="27" VerticalAlignment="Top" Foreground="White"/>

        <TextBlock Margin="700,184,0,0" TextWrapping="Wrap" Text="EMAIL PASSWORD" FontSize="20" HorizontalAlignment="Left" Width="300" Height="27" VerticalAlignment="Top" Foreground="White"/>

        <TextBlock Margin="700,244,0,0" TextWrapping="Wrap" Text="HOSTNAME" VerticalAlignment="Top" FontSize="20" HorizontalAlignment="Left" Width="120" Foreground="White"/>

        <TextBlock Margin="700,304,0,0" TextWrapping="Wrap" Text="PORT" FontSize="20" HorizontalAlignment="Left" Width="60" Height="27" VerticalAlignment="Top" Foreground="White"/>

        <TextBox x:Name="PRIVATE_KEY_PATH" Margin="100,154,0,0" TextWrapping="Wrap" Text="PATH" FontSize="14" Background="White" HorizontalAlignment="Left" Width="400" Height="21" VerticalAlignment="Top"/>

        <TextBox x:Name="CERTIFICATE_PATH" Margin="100,214,0,0" TextWrapping="Wrap" Text="PATH" FontSize="14" HorizontalAlignment="Left" Width="400" Height="21" VerticalAlignment="Top"/>

        <TextBox x:Name="CHAIN_PATH" Margin="100,274,0,0" TextWrapping="Wrap" Text="PATH" FontSize="14" HorizontalAlignment="Left" Width="400" Height="21" VerticalAlignment="Top"/>

        <TextBox x:Name="EMAIL" Margin="700,154,0,0" TextWrapping="Wrap" Text="example@gmail.com" FontSize="14" HorizontalAlignment="Left" Width="400" Height="21" VerticalAlignment="Top"/>

        <TextBox x:Name="EMAIL_PASSWORD" Margin="700,214,0,0" TextWrapping="Wrap" Text="Its should be a specific password generated for email sending!" FontSize="14" HorizontalAlignment="Left" Width="400" Height="21" VerticalAlignment="Top"/>

        <TextBox x:Name="SERVER_HOSTNAME" Margin="700,274,0,0" TextWrapping="Wrap" FontSize="14" Text="IPV4 adress , as set on router virtual server(port-forward)" HorizontalAlignment="Left" Width="400" Height="21" VerticalAlignment="Top"/>

        <TextBox x:Name="SERVER_PORT" Margin="700,334,0,0" TextWrapping="Wrap" FontSize="14" Text="Port number set on virtual server(ex: 8080)" HorizontalAlignment="Left" Width="400" Height="21" VerticalAlignment="Top"/>

        <CheckBox x:Name="LOGS_CHECKBOX" Content="CHECK THIS BOX FOR SERVER LOGS" Margin="100,510,0,0" ClickMode="Press" HorizontalAlignment="Left" Width="400" Height="15" VerticalAlignment="Top" Click="CheckBoxLog_Click" Foreground="White"/>

        <Button 
            x:Name="Admin"
            Margin="1060,28,0,0"
            RenderTransformOrigin="0.934,0.703"
            Background="Green"
            Foreground="White"
            Click="Admin_Options"
            Height="50"
            BorderThickness="0"
            VerticalAlignment="Top"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" HorizontalAlignment="Left" Width="50">

            <Button.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                    </ResourceDictionary.MergedDictionaries>

                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </ResourceDictionary>
            </Button.Resources>

            <Button.Content>
                <materialDesign:PackIcon Kind="CloudSecurity"
                                 Width="24" Height="24"
                                 Foreground="White"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center" />
            </Button.Content>
        </Button>

        <Button 
            x:Name="About"
            Margin="1120,28,0,0"
            RenderTransformOrigin="0.934,0.703"
            Background="Green"
            Foreground="White"
            Click="About_app"
            Height="50"
            BorderThickness="0"
            VerticalAlignment="Top"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" HorizontalAlignment="Left" Width="50">

            <Button.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                    </ResourceDictionary.MergedDictionaries>

                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </ResourceDictionary>
            </Button.Resources>

            <Button.Content>
                <materialDesign:PackIcon Kind="About"
                         Width="24" Height="24"
                         Foreground="White"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center" />
            </Button.Content>
        </Button>


        <Button x:Name ="PICKER_1" Click="BrowseButton_Click1" Background="RosyBrown" RenderTransformOrigin="0.54,0.453" Margin="500,154,0,0" HorizontalAlignment="Left" Width="24" Height="21" VerticalAlignment="Top">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="...." VerticalAlignment="Center" Foreground="White" />
            </StackPanel>

        </Button>

        <Button x:Name ="PICKER_2" Click="BrowseButton_Click2" Background="RosyBrown" RenderTransformOrigin="0.54,0.453" Margin="500,214,0,0" HorizontalAlignment="Left" Width="24" Height="21" VerticalAlignment="Top">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="...." VerticalAlignment="Center" Foreground="White" />
            </StackPanel>

        </Button>

        <Button x:Name ="PICKER_3" Click="BrowseButton_Click3" Background="RosyBrown" RenderTransformOrigin="0.54,0.453" Margin="500,274,0,0" HorizontalAlignment="Left" Width="24" Height="21" VerticalAlignment="Top">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="...." VerticalAlignment="Center" Foreground="White" />
            </StackPanel>

        </Button>

        <Button 
            x:Name="AddUser"
            Margin="1000,550,0,0"
            Background="Orange"
            Foreground="White"
            Click="Add_User"
            Height="54"
            BorderThickness="0"
            Width="100"
            VerticalAlignment="Top"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" HorizontalAlignment="Left">
            
            <Button.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                    </ResourceDictionary.MergedDictionaries>

                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </ResourceDictionary>
            </Button.Resources>

            
            <Button.Content>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    
                    <materialDesign:PackIcon 
                       Kind="PlusMinus"
                       Width="24" Height="24"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" 
                    />

                    <TextBlock Text="Users"
                       Margin="5,0,0,0"
                       FontSize="14"
                       VerticalAlignment="Center"
                       Foreground="White" 
                    />

                </StackPanel>
                    
            </Button.Content>

            
        </Button>

    </Grid>

</Window>
